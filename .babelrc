{
  "presets": [ ["es2015"], "react", "stage-0" ],
  "plugins": [
    ["relay", {"compat": true, "schema": "./schema.graphql"}],
    ["transform-runtime", {
      "polyfill": false,
      "regenerator": true
    }],
    ["module-alias", [
      { "src": "./src/www_cores", "expose": "cores" },
      { "src": "./src/helpers", "expose": "helpers" },
      { "src": "./src/resources", "expose": "resources" }
    ]]
  ],
  "env": {
    "development": {
      "plugins": ["react-hot-loader/babel"]
    }
  },
  "env": {
    "test": {
      "plugins": ["transform-es2015-modules-commonjs"]
    }
  }
}
